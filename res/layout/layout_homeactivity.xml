<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pulwifi="http://schemas.android.com/apk/res/es.pulimento.wifi"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <es.pulimento.wifi.ui.utils.PagerHeader
        android:id="@+id/pager_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pager_header_height"
        pulwifi:activeTextColor="@color/pager_header_active_text_color"
        pulwifi:backgroundColor="@color/pager_header_background_color"
        pulwifi:inactiveTextColor="@color/pager_header_inactive_text_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white" />

</LinearLayout>